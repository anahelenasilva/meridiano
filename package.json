{
  "name": "simple-typescript-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "start": "node dist/src",
    "web": "ts-node src/app.ts",
    "api": "ts-node src/index.ts",
    "frontend": "cd frontend && npm run dev",
    "dev:full": "concurrently \"npm run api\" \"npm run frontend\"",
    "briefing": "ts-node src/runBriefing.ts",
    "briefing:tech": "ts-node src/runBriefing.ts --feed technology",
    "briefing:teclas": "ts-node src/runBriefing.ts --feed teclas",
    "briefing:brasil": "ts-node src/runBriefing.ts --feed brasil",
    "briefing:scrape": "ts-node src/runBriefing.ts --scrape",
    "briefing:process": "ts-node src/runBriefing.ts --process",
    "briefing:rate": "ts-node src/runBriefing.ts --rate",
    "briefing:generate": "ts-node src/runBriefing.ts --generate",
    "briefing:status": "ts-node src/runBriefing.ts --status",
    "briefing:simple": "ts-node src/runBriefing.ts --simple-brief",
    "examples": "ts-node -e \"import('./src/briefingExamples').then(m => m.examples.completeWorkflowExample())\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.37.0",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.3.0",
    "@types/sqlite3": "^3.1.11",
    "@types/jsdom": "^21.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "marked": "^13.0.3",
    "ml-kmeans": "^6.0.0",
    "moment": "^2.30.1",
    "node-readability": "^3.0.0",
    "nunjucks": "^3.2.4",
    "openai": "^4.67.3",
    "rss-parser": "^3.13.0",
    "sqlite3": "^5.1.7",
    "jsdom": "^23.0.0",
    "@mozilla/readability": "^0.5.0"
  }
}
